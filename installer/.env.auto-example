# Homelab Auto-Install Configuration Example
# Copy this to ~/homelab/.env for fully automated installation

# Repository Configuration
INSTALLER_REPO=https://github.com/razumnyak/homelab
INSTALLER_BRANCH=main
HOMELAB_K8S_REPO=https://github.com/razumnyak/homelab-k8s.git
GITHUB_KEYS_URL=https://github.com/razumnyak.keys

# Node Configuration (REQUIRED for auto-install)
NODE_TYPE=master-node
NODE_NAME=homelab-master
# MASTER_IP=192.168.1.150  # Only needed for slave-node

# Network Interfaces (REQUIRED for dual-interface master-node)
# Run 'ip addr' to see available interfaces on your system
# Common names: eth0, ens3, enp0s3, eno1, wlan0
WAN_INTERFACE=eth0
LAN_INTERFACE=eth1

# Network Configuration
LAN_SUBNET=10.0.0.0/24

# Service Credentials (REQUIRED)
ARGOCD_PASSWORD=your-secure-password-here

# Installation Options (REQUIRED for auto-install)
SKIP_CLEANUP=false
FORCE_CLEANUP=false
SKIP_PREREQUISITES=false
AUTO_CONFIRM=true
FACTORY_RESET=false
VERBOSE_MODE=false

# K3s Configuration
K3S_VERSION=stable

# System Configuration
DEFAULT_TIMEZONE=UTC

# SSH Key Management
ENABLE_SSH_KEY_SYNC=true
GITHUB_KEYS_URL=https://github.com/razumnyak.keys

# Cron Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=7
ENABLE_SYSTEM_UPDATES=false