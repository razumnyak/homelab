# Homelab Environment Configuration Template
# Copy this file to ~/homelab/.env and customize for your setup

# Repository Configuration
#INSTALLER_REPO=https://github.com/razumnyak/homelab
#INSTALLER_BRANCH=main
#HOMELAB_K8S_REPO=https://github.com/razumnyak/homelab-k8s.git
#GITHUB_KEYS_URL=https://github.com/razumnyak.keys

# Private Repository Support:
# For private repos, HOMELAB_K8S_REPO will be automatically converted to SSH format
# You'll need to add the ArgoCD SSH public key as a deploy key to your repository
# Public key will be generated at: ~/homelab/configs/ssh/keys/argocd-deploy.pub

# Node Configuration
#NODE_TYPE=master-node
#NODE_NAME=homelab-master
#MASTER_IP=192.168.1.150
#CLUSTER_TOKEN=

# Network Interfaces (run 'ip addr' to see available interfaces)
#WAN_INTERFACE=eth0
#LAN_INTERFACE=eth1

# Network Configuration
#LAN_SUBNET=10.0.0.0/24

# Services use ClusterIP and hostNetwork
# No fixed IPs needed

# Service Credentials
#ARGOCD_PASSWORD=

# Installation Options
#SKIP_CLEANUP=false
#FORCE_CLEANUP=false
#SKIP_PREREQUISITES=false
#AUTO_CONFIRM=true
#FACTORY_RESET=false
#VERBOSE_MODE=false

# K3s Configuration
#K3S_VERSION=stable
#K3S_EXTRA_ARGS=
#K3S_AGENT_ARGS=

# System Configuration
#DEFAULT_TIMEZONE=UTC
#SSH_PORT=22
#K3S_API_PORT=6443
#KUBELET_PORT=10250

# Performance Tuning
#MAX_FILE_DESCRIPTORS=655350
#INOTIFY_WATCHES=524288
#VM_SWAPPINESS=10
#NET_SOMAXCONN=65535
#TCP_SYN_BACKLOG=65535
#NETDEV_BACKLOG=65535

# SSH Key Management
#ENABLE_SSH_KEY_SYNC=true
#GITHUB_KEYS_URL=https://github.com/razumnyak.keys
#SSH_KEY_SYNC_HOUR=3

# Cron Configuration
#ENABLE_AUTO_BACKUP=true
#BACKUP_RETENTION_DAYS=7
#ENABLE_SYSTEM_UPDATES=false